{
  "name": "bottontabs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . && stylelint 'src/**/*.@(css|scss)'"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-fontawesome": "^1.6.1",
    "react-native-fontawesome": "^5.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.5",
    "@teamthread/strict-css-modules-loader": "^0.0.3",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "babel-preset-react": "^7.0.0-beta.3",
    "css-loader": "^2.1.1",
    "eslint-plugin-css-modules": "^2.11.0",
    "file-loader": "^3.0.1",
    "node-sass": "^6.0.0",
    "postcss": "^7.0.16",
    "postcss-css-variables": "^0.12.0",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "3.1.3",
    "react-native-postcss-transformer": "^1.2.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-react-native-css-modules": "^2.5.0",
    "stylelint-react-native": "^2.1.1",

    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-react-native-classname-to-style": "^1.2.2",
    "babel-plugin-react-native-platform-specific-extensions": "^1.1.1",
    "eslint": "7.14.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-native-css-transformer": "^1.2.4",
    "react-native-sass-transformer": "^2.0.0",
    "react-test-renderer": "17.0.2",
    "sass": "^1.45.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 11",
    "Android >= 4.4",
    "iOS >= 8"
  ],
  "jest": {
    "preset": "react-native"
  },
  "postcss": {
    "plugins": {
      "postcss-css-variables": {}
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "css-modules"
    ],
    "extends": [
      "plugin:css-modules/recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-react-native-css-modules",
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]*$",
      "declaration-block-no-duplicate-properties": true,
      "no-duplicate-selectors": true,
      "no-extra-semicolons": true,
      "no-eol-whitespace": true,
      "no-missing-end-of-source-newline": true
    }
  }
}
